# PC Control Agent - Environment Configuration Template
# Copy this file to .env and update the values for your environment

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
# Server host address (0.0.0.0 for all interfaces, localhost for local only)
PC_AGENT_HOST=0.0.0.0

# Server port (default: 8765)
PC_AGENT_PORT=8765

# Enable SSL/TLS (true for production, false for development)
PC_AGENT_USE_SSL=false

# SSL certificate files (required if USE_SSL=true)
PC_AGENT_CERT_FILE=config/certificates/server.crt
PC_AGENT_KEY_FILE=config/certificates/server.key

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
PC_AGENT_LOG_LEVEL=INFO

# Log file path (optional, logs to console if not specified)
PC_AGENT_LOG_FILE=

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# JWT secret key (generate a strong random key for production)
# Use: python -c "import secrets; print(secrets.token_urlsafe(32))"
PC_AGENT_SECRET_KEY=your-super-secret-key-change-this-in-production

# Session timeout in seconds (default: 24 hours)
PC_AGENT_SESSION_TIMEOUT=86400

# Maximum connection attempts per device
PC_AGENT_MAX_CONNECTION_ATTEMPTS=5

# =============================================================================
# API CONFIGURATION
# =============================================================================
# Claude API configuration (required for command interpretation)
PC_AGENT_CLAUDE_API_KEY=your-claude-api-key-here
PC_AGENT_CLAUDE_API_URL=https://api.anthropic.com/v1

# =============================================================================
# AUDIO PROCESSING CONFIGURATION
# =============================================================================
# Audio sample rate (default: 16000 Hz)
PC_AGENT_AUDIO_SAMPLE_RATE=16000

# Audio channels (1 for mono, 2 for stereo)
PC_AGENT_AUDIO_CHANNELS=1

# Audio buffer size
PC_AGENT_AUDIO_BUFFER_SIZE=1024

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# Database connection URL (SQLite for development, PostgreSQL for production)
PC_AGENT_DATABASE_URL=sqlite:///./pc_agent.db

# For PostgreSQL production:
# PC_AGENT_DATABASE_URL=postgresql://user:password@localhost:5432/pc_control

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================
# Maximum concurrent WebSocket connections
PC_AGENT_MAX_CONCURRENT_CONNECTIONS=10

# Command timeout in seconds
PC_AGENT_COMMAND_TIMEOUT=30

# =============================================================================
# ENVIRONMENT SETTINGS
# =============================================================================
# Environment type (development, staging, production)
PC_AGENT_ENVIRONMENT=development

# Application version (auto-updated by build process)
PC_AGENT_VERSION=1.0.0

# =============================================================================
# DEVELOPMENT SETTINGS (only used in development)
# =============================================================================
# Enable debug mode (auto-generated based on environment)
# Set to true for additional debugging information
PC_AGENT_DEBUG=true

# Enable API key validation (set to false for testing without API keys)
PC_AGENT_VALIDATE_API_KEYS=false

# Enable certificate validation (set to false for development with self-signed certs)
PC_AGENT_VALIDATE_CERTIFICATES=false