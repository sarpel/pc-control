{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "MCP Tools Schema for Voice-Controlled PC Assistant",
  "description": "Defines MCP tool contracts for Windows system operations and browser automation",
  "version": "1.0.0",
  "tools": [
    {
      "name": "launch_application",
      "description": "Launch a Windows application by name or path",
      "inputSchema": {
        "type": "object",
        "properties": {
          "appName": {
            "type": "string",
            "description": "Application name (e.g., 'Chrome', 'Notepad') or executable path"
          },
          "args": {
            "type": "array",
            "items": {"type": "string"},
            "description": "Optional command-line arguments"
          },
          "workingDirectory": {
            "type": "string",
            "description": "Optional working directory"
          }
        },
        "required": ["appName"]
      },
      "outputSchema": {
        "type": "object",
        "properties": {
          "success": {"type": "boolean"},
          "processId": {"type": "integer"},
          "message": {"type": "string"}
        }
      }
    },
    {
      "name": "adjust_volume",
      "description": "Adjust system audio volume",
      "inputSchema": {
        "type": "object",
        "properties": {
          "level": {
            "type": "integer",
            "minimum": 0,
            "maximum": 100,
            "description": "Volume level (0-100)"
          },
          "relative": {
            "type": "boolean",
            "description": "If true, level is a relative adjustment (+/- from current)"
          }
        },
        "required": ["level"]
      },
      "outputSchema": {
        "type": "object",
        "properties": {
          "success": {"type": "boolean"},
          "currentLevel": {"type": "integer"},
          "message": {"type": "string"}
        }
      }
    },
    {
      "name": "find_files",
      "description": "Search for files by name pattern",
      "inputSchema": {
        "type": "object",
        "properties": {
          "query": {
            "type": "string",
            "description": "Search query (supports wildcards)"
          },
          "locations": {
            "type": "array",
            "items": {"type": "string"},
            "description": "Directories to search (supports wildcards like C:\\Users\\*\\Documents)"
          },
          "maxResults": {
            "type": "integer",
            "default": 10,
            "description": "Maximum number of results to return"
          }
        },
        "required": ["query"]
      },
      "outputSchema": {
        "type": "object",
        "properties": {
          "success": {"type": "boolean"},
          "files": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "path": {"type": "string"},
                "size": {"type": "integer"},
                "modified": {"type": "string", "format": "date-time"}
              }
            }
          },
          "message": {"type": "string"}
        }
      }
    },
    {
      "name": "delete_file",
      "description": "Delete a file from the filesystem",
      "inputSchema": {
        "type": "object",
        "properties": {
          "path": {
            "type": "string",
            "description": "Absolute path to file"
          },
          "confirmed": {
            "type": "boolean",
            "description": "User confirmation if path is in system directory"
          }
        },
        "required": ["path"]
      },
      "outputSchema": {
        "type": "object",
        "properties": {
          "success": {"type": "boolean"},
          "requiresConfirmation": {"type": "boolean"},
          "message": {"type": "string"}
        }
      }
    },
    {
      "name": "query_system_info",
      "description": "Get Windows system information",
      "inputSchema": {
        "type": "object",
        "properties": {
          "infoType": {
            "type": "string",
            "enum": ["all", "os", "memory", "cpu", "disk"],
            "description": "Type of system information to retrieve"
          }
        },
        "required": ["infoType"]
      },
      "outputSchema": {
        "type": "object",
        "properties": {
          "success": {"type": "boolean"},
          "info": {
            "type": "object",
            "properties": {
              "osVersion": {"type": "string"},
              "totalMemoryGB": {"type": "number"},
              "availableMemoryGB": {"type": "number"},
              "cpuModel": {"type": "string"},
              "cpuUsagePercent": {"type": "number"},
              "diskSpaceGB": {"type": "number"}
            }
          },
          "message": {"type": "string"}
        }
      }
    },
    {
      "name": "browser_navigate",
      "description": "Navigate Chrome browser to URL",
      "inputSchema": {
        "type": "object",
        "properties": {
          "url": {
            "type": "string",
            "format": "uri",
            "description": "URL to navigate to"
          },
          "newTab": {
            "type": "boolean",
            "default": false,
            "description": "Open in new tab"
          }
        },
        "required": ["url"]
      },
      "outputSchema": {
        "type": "object",
        "properties": {
          "success": {"type": "boolean"},
          "pageTitle": {"type": "string"},
          "loadTimeMs": {"type": "integer"},
          "message": {"type": "string"}
        }
      }
    },
    {
      "name": "browser_search",
      "description": "Perform web search in Chrome",
      "inputSchema": {
        "type": "object",
        "properties": {
          "query": {
            "type": "string",
            "description": "Search query"
          },
          "searchEngine": {
            "type": "string",
            "enum": ["google", "bing", "duckduckgo"],
            "default": "google",
            "description": "Search engine to use"
          }
        },
        "required": ["query"]
      },
      "outputSchema": {
        "type": "object",
        "properties": {
          "success": {"type": "boolean"},
          "resultsUrl": {"type": "string"},
          "message": {"type": "string"}
        }
      }
    },
    {
      "name": "browser_extract_content",
      "description": "Extract and summarize current page content",
      "inputSchema": {
        "type": "object",
        "properties": {
          "summaryLength": {
            "type": "string",
            "enum": ["brief", "detailed"],
            "default": "brief",
            "description": "Length of content summary"
          }
        }
      },
      "outputSchema": {
        "type": "object",
        "properties": {
          "success": {"type": "boolean"},
          "title": {"type": "string"},
          "url": {"type": "string"},
          "summary": {"type": "string"},
          "message": {"type": "string"}
        }
      }
    },
    {
      "name": "browser_interact",
      "description": "Interact with page elements (click, type, scroll)",
      "inputSchema": {
        "type": "object",
        "properties": {
          "action": {
            "type": "string",
            "enum": ["click", "type", "scroll"],
            "description": "Interaction type"
          },
          "selector": {
            "type": "string",
            "description": "CSS selector for target element"
          },
          "value": {
            "type": "string",
            "description": "Value for 'type' action or scroll direction"
          }
        },
        "required": ["action"]
      },
      "outputSchema": {
        "type": "object",
        "properties": {
          "success": {"type": "boolean"},
          "message": {"type": "string"}
        }
      }
    }
  ],
  "toolCategories": {
    "system": ["launch_application", "adjust_volume", "find_files", "delete_file", "query_system_info"],
    "browser": ["browser_navigate", "browser_search", "browser_extract_content", "browser_interact"]
  },
  "errorHandling": {
    "retryableErrors": ["TIMEOUT", "TEMPORARY_UNAVAILABLE", "RATE_LIMIT"],
    "nonRetryableErrors": ["INVALID_PARAMETER", "PERMISSION_DENIED", "NOT_FOUND"],
    "maxRetries": 3,
    "retryBackoffMs": [100, 500, 2000]
  },
  "securityConstraints": {
    "confirmationRequired": {
      "delete_file": {
        "condition": "path.startswith('C:\\\\Windows') OR path.startswith('C:\\\\Program Files')",
        "message": "{filename} dosyas1 sistem dizininden silinsin mi? Bu Windows i_lemlerini etkileyebilir."
      }
    },
    "allowedPaths": {
      "delete_file": ["C:\\Users\\*", "D:\\*", "E:\\*"],
      "blocked": ["C:\\Windows\\*", "C:\\Program Files\\*"]
    }
  },
  "performanceConstraints": {
    "timeouts": {
      "launch_application": 5000,
      "adjust_volume": 1000,
      "find_files": 10000,
      "delete_file": 2000,
      "query_system_info": 3000,
      "browser_navigate": 15000,
      "browser_search": 15000,
      "browser_extract_content": 10000,
      "browser_interact": 5000
    },
    "maxConcurrentTools": 3
  }
}