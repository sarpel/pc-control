<?xml version="1.0" encoding="utf-8"?>
<data-extraction-rules>
    <cloud-backup>
        <!-- Include user data that should be backed up -->
        <include domain="database" />
        <include domain="sharedpref" />

        <!-- Exclude sensitive data from backup -->
        <exclude domain="sharedpref" path="security_prefs.xml" />
        <exclude domain="database" path="security_database" />
    </cloud-backup>

    <device-transfer>
        <include domain="database" />
        <include domain="sharedpref" />

        <exclude domain="sharedpref" path="security_prefs.xml" />
        <exclude domain="database" path="security_database" />
    </device-transfer>
</data-extraction-rules>