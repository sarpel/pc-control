<?xml version="1.0" encoding="utf-8"?>
<full-backup-content>
    <!-- Include user data for backup -->
    <include domain="database" />
    <include domain="sharedpref" />

    <!-- Exclude sensitive data from backup -->
    <exclude domain="sharedpref" path="security_prefs.xml" />
    <exclude domain="database" path="security_database" />

    <!-- Exclude cache and temporary files -->
    <exclude domain="file" path="cache/" />
    <exclude domain="file" path="temp/" />
</full-backup-content>